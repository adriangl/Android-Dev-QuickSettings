<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/grant_permissions_dialog_margin"
    android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/light_grey"
        android:id="@+id/grant_permissions_container"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/grant_permissions_dialog_container_padding">

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/grant_permissions_dialog_container_item_margin"
            android:layout_width="match_parent"
            android:text="@string/main_permissions_not_granted_title"
            android:textStyle="bold" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/grant_permissions_dialog_container_item_margin"
            android:layout_width="match_parent"
            android:text="@string/main_permissions_not_granted_description" />

        <TextView
            android:fontFamily="monospace"
            android:id="@+id/grant_permissions_text"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/grant_permissions_dialog_container_item_margin"
            android:layout_width="match_parent" />

        <Button
            android:id="@+id/permissions_share"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/share_permissions" />

    </LinearLayout>

</android.support.v7.widget.CardView>